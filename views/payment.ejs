<!DOCTYPE html>
<html>
    <title>Theta Events - Payment</title>

    <% include ./partials/head %>

    <% include ./partials/navbar %>

    <body>
        <main>
            <div class="container">
                <br />
                <% if (sessionFlash && sessionFlash.message) { %>
                    <div class="alert alert-<%= sessionFlash.type %> animated fadeInLeft"><%= sessionFlash.message %><i class="alertClose material-icons">close</i></div>
                <% } %>

                <div class="row">
                    <h2 class="bold fg-grey center-align">Pay for <%= event.title %></h2>

                    <form class="col s10 center-align offset-s1 l8 offset-l2" action="/payment/<%= event.id %>" method="POST">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="cardNumber" type="text" name="cardNumber" required="" class="validate" />
                                <label for="cardNumber">Card Number</label>
                            </div>

                            <div class="input-field col s12">
                                <input id="cardNumber" type="text" name="cardNumber" required="" class="validate" />
                                <label for="cardNumber">Card Number</label>
                            </div>

                            <div class="input-field col s12">
                                <input id="expiry" type="text" name="expiry" required="" class="validate" />
                                <label for="expiry">Expiry</label>
                            </div>
                    
                            <div class="input-field col s12">
                                <input id="cvv" type="text" name="password" required="" class="validate" />
                                <label for="cvv">CVV</label>
                            </div>

                            <button class="bg-blue btn waves-effect waves-light" style="width: 97%" type="submit">Pay Now</button>
                        </div>
                    </form>
                </div>

                <br /><br />
            </div>
        </main>

        <% include ./partials/footer %>

        <script>
            // Close button functionality.
            var closeButton = document.getElementsByClassName("alertClose");
            
            for (var i = 0; i < closeButton.length; i++) {
                alertCloseClick(closeButton[i], '.alert');
            }

            // Remove alert after 2.5 seconds.
            setTimeout(function() {
                $('.alert').addClass("animated fadeOutLeft");
            }, 2500);
        </script>
    </body>
</html>